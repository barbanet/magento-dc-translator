<config>
    <modules>
        <Dc_Translator>
            <version>1.0.0</version>
        </Dc_Translator>
    </modules>
    <admin>
        <routers>
            <translator>
                <use>admin</use>
                <args>
                    <module>Dc_Translator</module>
                    <frontName>translator</frontName>
                </args>
            </translator>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <translator>
                    <file>dc/translator.xml</file>
                </translator>
            </updates>
        </layout>
        <translate>
            <modules>
                <translator>
                    <files>
                        <default>Dc_Translator.csv</default>
                    </files>
                </translator>
            </modules>
        </translate>
        <events>
            <translator_package_create>
                <observers>
                    <translator_package_create>
                        <class>translator/observer_package</class>
                        <method>create</method>
                    </translator_package_create>
                </observers>
            </translator_package_create>
            <translator_package_import>
                <observers>
                    <translator_package_import>
                        <class>translator/observer_package</class>
                        <method>import</method>
                    </translator_package_import>
                </observers>
            </translator_package_import>
            <translator_package_generate>
                <observers>
                    <translator_package_generate>
                        <class>translator/observer_package</class>
                        <method>generate</method>
                    </translator_package_generate>
                </observers>
            </translator_package_generate>
            <translator_package_file_upload>
                <observers>
                    <translator_package_file_upload>
                        <class>translator/observer_package</class>
                        <method>upload</method>
                    </translator_package_file_upload>
                </observers>
            </translator_package_file_upload>
        </events>
    </adminhtml>
	<global>
	    <blocks>
            <translator>
                <class>Dc_Translator_Block</class>
            </translator>
        </blocks>
        <helpers>
            <translator>
                <class>Dc_Translator_Helper</class>
            </translator>
        </helpers>
        <models>
            <translator>
                <class>Dc_Translator_Model</class>
                <resourceModel>translator_resource</resourceModel>
            </translator>
            <translator_resource>
                <class>Dc_Translator_Model_Resource</class>
                <entities>
                    <package>
                        <table>dc_translator_package</table>
                    </package>
                    <key>
                        <table>dc_translator_key</table>
                    </key>
                    <file>
                        <table>dc_translator_file</table>
                    </file>
                </entities>
            </translator_resource>
            <widget>
                <rewrite>
                    <template_filter>Dc_Translator_Model_Template_Filter</template_filter>
                </rewrite>
            </widget>
        </models>
        <resources>
            <translator_setup>
                <setup>
                    <module>Dc_Translator</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </translator_setup>
            <translator_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </translator_write>
            <translator_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </translator_read>
        </resources>
    </global>
    <default>
        <cms>
            <translate>
                <default_module>translator</default_module>
            </translate>
        </cms>
    </default>
</config>
